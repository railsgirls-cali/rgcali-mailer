<%= form_for @person do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:" %>
      </h2>
      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <article class="row">
    <div class="col s4">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="col s4">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="col s4">
      <%= f.label :gender %>
      <%= f.select :gender, %w(f m) %>
    </div>
  </article>
  <article class="row center">
    <div class="col s12">
      <%= f.label :profession %>
      <%= f.text_field :profession %>
    </div>
  </article>
  <article class="row center">
    <div class="col s6">
      <%= f.check_box :attended_friday, type:"checkbox", id:"attended_friday", class: "filled-in" %>
      <label class="strong color-black" for="attended_friday">¿Asistió el Viernes?</label>
    </div>
    <div class="col s6">
      <%= f.check_box :attended_saturday, type:"checkbox", id:"attended_saturday", class: "filled-in" %>
      <label class="strong color-black" for="attended_saturday">¿Asistió el Viernes?</label>
    </div>
  </article>
  <article class=" center">
    <div class="col s6">
      <br>
      <%= f.submit 'Save', class: 'btn-large' %>
    </div>
  </article>


<% end %>
<br>
